<div class="content">
  <div id="search-box">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <div class= "form-group">
        <%= f.text_field :keyword, placeholder: "keyword", class: "search-input"%>
        <%= f.submit "search", class: "search-btn" %>
      </div>
    <% end %>
  </div>
  <h2>検索結果</h2>
  <% if @books.present? %>
    <%= render 'books/book'%>
  <% end %>
</div>